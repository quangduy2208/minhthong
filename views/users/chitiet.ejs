<%- include ('../layouts/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Thông tin chi tiet</h1>
            <span>Khách hàng : <%= user.name  %> </span>
           
            <table class="table table-bordered table-sm table-hover" >
                <thead class="thead-dark">
                    <tr>
                        <th>Ngày</th>
                        <th>Tên</th>
                        <th>Loại</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Người giao</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= (user.month).getHours()+":"+(user.month).getMinutes()+"_"+(user.month).getDate()+"/"+(user.month).getMonth()+"/"+(user.month).getFullYear() %> </td>
                        <td><%= user.name %> </td>
                        <td><%= user.loai %> </td>
                        <td><%= user.soluong %> </td>
                        <td><%= user.gia %> </td>
                        <td><%= user.giao %> </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('../layouts/footer.ejs') %>